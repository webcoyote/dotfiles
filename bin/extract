#!/usr/bin/env bash
# Inspired by: https://news.ycombinator.com/item?id=18987485
set -euo pipefail

if [[ "$#" -ne 1 ]]; then
    echo "Usage: $(basename "${BASH_SOURCE[0]}") ARCHIVE-NAME"
    exit "$#"
fi

if [[ ! -f "$1" ]] ; then
    echo >&2 "Error: unable to find '$1'"
    exit 1
fi

case "$1" in
    *.tar.bz2)   exec tar xjf "$1"     ;;
    *.tar.gz)    exec tar xzf "$1"     ;;
    *.bz2)       exec bunzip2 "$1"     ;;
    *.rar)       exec unrar e "$1"     ;;
    *.gz)        exec gunzip "$1"      ;;
    *.tar)       exec tar xf "$1"      ;;
    *.tbz2)      exec tar xjf "$1"     ;;
    *.tgz)       exec tar xzf "$1"     ;;
    *.zip)       exec unzip "$1"       ;;
    *.Z)         exec uncompress "$1"  ;;
    *.7z)        exec 7z x "$1"        ;;
    *) echo >&2 "Error: unknown archive format for '$1'" ; exit 1 ;;
esac
