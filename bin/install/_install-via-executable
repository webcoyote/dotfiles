#!/usr/bin/env bash
set -Eeuo pipefail

# Parse options
eval set -- "$(getopt -o h --long help -n "${BASH_SOURCE[0]}" -- "$@")"
usage () {
    echo "Usage:   ${BASH_SOURCE[0]} APP-NAME URL"
    echo "Example: ${BASH_SOURCE[0]} foo https://foo.com/files/foo.exe"
    echo "Install application via URL"
    echo ""
    echo "Options:"
    echo "  -h | --help             show this help message"
}
while true ; do
    case "$1" in
        -h|--help) usage ; exit 0 ;;
        --) shift ; break ;;
        *) echo >&2 "ERROR: Invalid option" ; exit 1 ;;
    esac
done

# Get required arguments
if [[ "$#" -ne 2 ]]; then
    usage 1>&2
    exit 1
fi
APP="$1"
URL="$2"

# Check installed
if [[ -z "${FORCE:-}" ]]; then
    if command -v "$APP" &> /dev/null ; then
        echo "$APP already installed"
        exit 0
    fi
fi

# Install application
MYTMPDIR="$(mktemp -d)" ; trap 'rm -rf "$MYTMPDIR"' EXIT
# MYTMPDIR="/tmp/debug-install" ; mkdir -p "$MYTMPDIR"
(
    cd "$MYTMPDIR"
    EXE="$(basename "$URL")"
    [[ -f "$EXE" ]] || wget "$URL"
    start "./$EXE" -quiet
)

# Done
echo "$APP installed successfully"
